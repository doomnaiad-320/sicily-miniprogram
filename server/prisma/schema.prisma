generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  openId      String   @unique
  nickname    String
  avatarUrl   String
  status      String   @default("ACTIVE")
  createdAt   DateTime @default(now())
  lastLoginAt DateTime?

  posts    Post[]
  comments Comment[]
}

model Admin {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  password    String
  createdAt   DateTime @default(now())
  lastLoginAt DateTime?

  audits AuditRecord[]
  posts  Post[]
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  sort      Int      @default(0)
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  posts Post[]

  @@unique([name])
}

model Post {
  id             Int      @id @default(autoincrement())
  type           String
  title          String?
  description    String
  categoryId     Int
  locationLat    Float?
  locationLng    Float?
  locationText   String?
  contactPhone   String?
  status         String   @default("PENDING")
  rejectReason   String?
  tagsJson       String?
  createdByUser  Int?
  createdByAdmin Int?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  category Category      @relation(fields: [categoryId], references: [id])
  user     User?         @relation(fields: [createdByUser], references: [id])
  admin    Admin?        @relation(fields: [createdByAdmin], references: [id])
  images   PostImage[]
  comments Comment[]
  audits   AuditRecord[]

  @@index([categoryId])
  @@index([status, type])
  @@index([createdByUser])
}

model PostImage {
  id        Int      @id @default(autoincrement())
  postId    Int
  url       String
  sort      Int      @default(0)
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
}

model Comment {
  id        Int      @id @default(autoincrement())
  postId    Int
  userId    Int
  content   String
  createdAt DateTime @default(now())
  isDeleted Boolean  @default(false)

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id])

  @@index([postId])
}

model AuditRecord {
  id        Int      @id @default(autoincrement())
  postId    Int
  adminId   Int
  action    String
  reason    String?
  createdAt DateTime @default(now())

  post  Post  @relation(fields: [postId], references: [id], onDelete: Cascade)
  admin Admin @relation(fields: [adminId], references: [id])

  @@index([postId])
}
