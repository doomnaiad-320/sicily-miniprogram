.detail-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.image-swiper {
  width: 100%;
  height: 500rpx;
}

.image-swiper image {
  width: 100%;
  height: 100%;
}

.info-card {
  background: #fff;
  margin: 20rpx;
  padding: 24rpx;
  border-radius: 16rpx;
}

.type-badge {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #fff;
  margin-bottom: 16rpx;
}

.type-badge.lost {
  background: #ff6b6b;
}

.type-badge.found {
  background: #51cf66;
}

.desc {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.category {
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
}

.location {
  flex: 1;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.tag {
  font-size: 22rpx;
  color: #0052d9;
  background: #e8f3ff;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}

.contact {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 16rpx;
  border-top: 1rpx solid #eee;
  font-size: 26rpx;
  color: #666;
}

.comment-section {
  background: #fff;
  margin: 20rpx;
  padding: 24rpx;
  border-radius: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.comment-input {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.comment-input input {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
}

.comment-list {
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.empty-comment {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 40rpx 0;
}

.comment-item {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.comment-content {
  flex: 1;
}

.comment-user {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.comment-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}
